<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgV_grid_journal_item_journal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/example_journal_1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_parallelogram_journal_date"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtV_grid_journal_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:textColor="@color/color_1"
                        android:layout_gravity="center_horizontal"
                        android:textSize="14dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtV_grid_journal_item_month_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Sept 2022"
                        android:textColor="@color/color_1"
                        android:textSize="8dp"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/txtV_grid_journal_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerita xxxx"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textSize="20dp"
                android:textColor="@color/color_4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>