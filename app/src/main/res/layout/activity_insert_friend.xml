<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertFriendActivity">
    <LinearLayout
        android:id="@+id/lL_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/appbar" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lL_appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bagikan ke Teman Seperjalanan"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textSize="20dp"
                android:textColor="@color/color_1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/color_1"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="Sendirian atau bareng teman?"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teman Perjalanan"/>

                <AutoCompleteTextView
                    android:id="@+id/autoCTxtV_friends"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:completionThreshold="1"
                    android:hint="Cari nama temanmu disini..."
                    android:minHeight="48dp"
                    android:textColor="@color/color_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtV_skip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/skip"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textFontWeight="500"
                    android:textSize="14dp"
                    android:textColor="@color/color_1"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="KIRIM"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_round_login"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">
                <TextView
                    android:id="@+id/txtV_journal_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22 Sept 2022"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/color_1"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rV_last_journals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/grid_journal_item"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>